<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vertexes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Vertexes.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar >
        <ShellContent
            Title="Календарь"
            ContentTemplate="{DataTemplate views:SchedulerPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
        <ShellContent
            Title="Процессы"
            ContentTemplate="{DataTemplate views:ProcessListPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
        <ShellContent
            Title="Объекты"
            ContentTemplate="{DataTemplate views:VertexListPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
        <ShellContent
            Title="Связи"
            ContentTemplate="{DataTemplate views:EdgeListPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
    </TabBar>

</Shell>